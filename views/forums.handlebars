    <div class="forumcardcolumn">
      <div class="forumcard2">
        <a style="color:white;" href="/posts/newpost">Post a Thread</a></div>
    </div>
    <div class="forumcardcolumn">
      <div class="forumcard">
        <h3>Members online</h3>
        <br>
        {{#each users}}
        <p>
          <li>
            {{this.username}}
          </li>
        </p>
        {{/each}}
      </div>
    </div>
    <br>
    <br>
    <div class="forumcardcolumn">
