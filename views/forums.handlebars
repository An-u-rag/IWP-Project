<div style="color: pink; font-family:fantasy; font-size:22px; padding-left: 10%;">
  {{> errorMessage}}
</div>
<div class="forumsbody">
  <div class="dashboard2-body">
    <div class="dash2-card">
      <div class="dash2-card-image"></div>
      <div class="dash-card-text">
        <h1>FORUMS</h1>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <article>
    <ul class="accordion">
      <li class="accordion__item">
        <a href="#" class="accordion__link accordion__link_active">OUR COMMUNITY</a>
        <ul class="sub-accordion">
          <div class="forumsContent">
            <ul>
              <a href="posts/category/community">
                <h3 style="color: black;">Go to Community Page -> </h3>
              </a>
              <li><a href="#"><span>1</span>
                  <h3>
                    Welcome
                  </h3>
                </a>
                <p>Creator: Admin</p>
                <p>Date: 2020-10-06</p>
                <p>Upvotes: 1000</p>
              </li>
              {{#each cposts}}
              <li>
                <a href="/posts/post/{{this._id}}">
                  <h3 style="color:whitesmoke">{{this.title}}<br></h3>
                  <p>Creator: {{this.author.username}}</p>
                  <p>Date: {{this.date}}</p>
                  <p>Upvotes: {{this.voteScore}}</p>
                </a>
              </li>
              {{/each}}
            </ul>
          </div>
        </ul>
      </li>
      <li class="accordion__item">
